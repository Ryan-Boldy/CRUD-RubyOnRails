<p style="color: green"><%= notice %></p>

<h1><%= @title %></h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
    <p>
    <% if task.active? %>
      <%= button_to "Deactivate", deactivate_task_path(task), method: :post, class: 'button' %>
    <% else %>
      <%= button_to "Activate", activate_task_path(task), method: :post, class: 'button' %>
    <% end %>
    </p>
  <% end %>
</div>

<div>
  <%= link_to "Active", active_tasks_path, class: 'button' %>
  <%= link_to "Inactive", inactive_tasks_path, class: 'button' %>
  <%= link_to "All", tasks_path, class: 'button' %>
</div>


<%= link_to "New task", new_task_path %>
